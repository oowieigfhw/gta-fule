<script>
/* ---- إعداد اللعبة ---- */
const canvas = document.getElementById('game');
const ctx = canvas.getContext('2d');

const ui = {
  hp: document.getElementById('hp'),
  score: document.getElementById('score'),
  state: document.getElementById('state'),
  missionText: document.getElementById('missionText'),
  toggleMapBtn: document.getElementById('toggleMap'),
  newMissionBtn: document.getElementById('newMission'),
  resetBtn: document.getElementById('resetBtn')
};

const W = canvas.width, H = canvas.height;

/* الخريطة (مربعات) */
const map = {
  width: 2000,
  height: 1200,
  tile: 64
};

/* حالة اللعبة */
let game = {
  showMiniMap: true,
  score: 0,
  mission: null,
  time: 0
};

/* اللاعب */
const player = {
  x: map.width/2,
  y: map.height/2,
  w: 20,
  h: 28,
  angle: 0,
  speed: 0,
  maxSpeed: 3.2,
  accel: 0.2,
  friction: 0.92,
  hp: 100,
  inVehicle: false,
  idVehicle: null,
  fireCooldown: 0
};

/* سيارات بسيطة على الخريطة */
let vehicles = [];
for(let i=0;i<10;i++){
  vehicles.push({
    x: Math.random()*map.width,
    y: Math.random()*map.height,
    w: 36,
    h: 18,
    angle: Math.random()*Math.PI*2,
    speed: 0.6 + Math.random()*1.2,
    colorRand: Math.floor(Math.random()*360),
    id: i
  });
}

/* ذخيرة ومقذوفات */
let bullets = [];

/* مفاتيح */
const keys = {};

/* كاميرا */
const cam = { x: player.x - W/2, y: player.y - H/2 };

/* ---- وظائف مساعدة ---- */
function clamp(v,a,b){ return Math.max(a, Math.min(b, v)); }
function dist(x1,y1,x2,y2){ const dx=x1-x2, dy=y1-y2; return Math.sqrt(dx*dx+dy*dy); }

/* مهمة بسيطة: اذهب إلى نقطة */
function createMission(){
  const tx = Math.random()*(map.width-200)+100;
  const ty = Math.random()*(map.height-200)+100;
  game.mission = {type:'goto', x:tx, y:ty, done:false};
  ui.missionText.textContent = `اذهب إلى الموقع الأحمر (المسافة: ${Math.floor(dist(player.x,player.y,tx,ty))})`;
}
createMission();

/* ---- أحداث لوحة المفاتيح ---- */
window.addEventListener('keydown', e=>{
  keys[e.key.toLowerCase()] = true;
  if(e.key==='e' || e.key==='E'){ toggleVehicle(); }
  if(e.key==='m' || e.key==='M'){ game.showMiniMap = !game.showMiniMap; }
  if(e.key==='r' || e.key==='R'){ respawn(); }
});
window.addEventListener('keyup', e=>{
  keys[e.key.toLowerCase()] = false;
});

/* زرّات الواجهة */
ui.toggleMapBtn.addEventListener('click', ()=>{ game.showMiniMap = !game.showMiniMap; });
ui.newMissionBtn.addEventListener('click', ()=>{ createMission(); });
ui.resetBtn.addEventListener('click', ()=>{ respawn(); });

/* ---- تحكمات اللاعب و المركبة ---- */
function toggleVehicle(){
  if(player.inVehicle){
    // نزل من السيارة
    player.inVehicle = false;
    player.idVehicle = null;
    ui.state.textContent = 'مشّي';
    // ضع اللاعب بجانب السيارة
  } else {
    // ابحث عن أقرب سيارة قريبة
    let nearest = null, nd = 9999;
    vehicles.forEach(v=>{
      const d = dist(player.x,player.y,v.x,v.y);
      if(d < 60 && d < nd){ nd=d; nearest=v; }
    });
    if(nearest){
      player.inVehicle = true;
      player.idVehicle = nearest.id;
      ui.state.textContent = 'في السيارة';
    } else {
      // لا توجد سيارة قريبة
      // (يمكن إضافة إشعار)
    }
  }
}

/* إطلاق رصاص */
function fire(){
  if(player.fireCooldown > 0) return;
  player.fireCooldown = 10; // تبريد
  const angle = player.inVehicle ? vehicles[player.idVehicle].angle : player.angle;
  const sx = (player.inVehicle ? vehicles[player.idVehicle].x : player.x) + Math.cos(angle)*30;
  const sy = (player.inVehicle ? vehicles[player.idVehicle].y : player.y) + Math.sin(angle)*30;
  bullets.push({x:sx,y:sy,dx:Math.cos(angle)*8,dy:Math.sin(angle)*8,life:60});
}

/* إعادة وضع اللاعب */
function respawn(){
  player.x = map.width/2 + (Math.random()-0.5)*200;
  player.y = map.height/2 + (Math.random()-0.5)*200;
  player.hp = 100;
  player.inVehicle = false;
  player.idVehicle = null;
  bullets = [];
  game.score = 0;
  ui.score.textContent = game.score;
}

/* حفظ/تحميل */
function saveGame(){
  const s = {player:{x:player.x,y:player.y,hp:player.hp},score:game.score,mission:game.mission};
  localStorage.setItem('mini_openworld_save', JSON.stringify(s));
}
function loadGame(){
  const raw = localStorage.getItem('mini_openworld_save');
  if(raw) {
    try{
      const s = JSON.parse(raw);
      player.x = s.player.x || player.x;
      player.y = s.player.y || player.y;
      player.hp = s.player.hp || player.hp;
      game.score = s.score || 0;
      game.mission = s.mission || game.mission;
    }catch(e){}
  }
}
loadGame();

/* ---- حلقة التحديث والرسم ---- */
function update(){
  game.time++;
  // تحكم باللاعب
  let moveX = 0, moveY = 0;
  if(!player.inVehicle){
    if(keys['arrowup']||keys['w']) moveY -= 1;
    if(keys['arrowdown']||keys['s']) moveY += 1;
    if(keys['arrowleft']||keys['a']) moveX -= 1;
    if(keys['arrowright']||keys['d']) moveX += 1;
    // normalize
    if(moveX !== 0 || moveY !== 0){
      const mag = Math.sqrt(moveX*moveX + moveY*moveY);
      player.x += (moveX/mag) * 2.6;
      player.y += (moveY/mag) * 2.6;
      player.angle = Math.atan2(moveY, moveX);
    }
    // إطلاق نار
    if(keys[' ']) fire();
  } else {
    // تحكم بالسيارة
    const v = vehicles.find(d=>d.id===player.idVehicle);
    if(v){
      if(keys['w']||keys['arrowup']) v.speed += 0.12;
      if(keys['s']||keys['arrowdown']) v.speed -= 0.14;
      if(keys['a']||keys['arrowleft']) v.angle -= 0.06 * (v.speed/2+1);
      if(keys['d']||keys['arrowright']) v.angle += 0.06 * (v.speed/2+1);
      v.speed = clamp(v.speed, -4.2, 6);
      // حركة
      v.x += Math.cos(v.angle) * v.speed;
      v.y += Math.sin(v.angle) * v.speed;
      // تماسك بسيط
      v.speed *= 0.985;
      // إطلاق نار من السيارة
      if(keys[' ']) fire();
      // إذا تحركت السيارة خارج الخريطة، أعيدها
      v.x = clamp(v.x, 20, map.width-20);
      v.y = clamp(v.y, 20, map.height-20);
      player.x = v.x; player.y = v.y;
    } else {
      // خطأ: لا توجد مركبة
      player.inVehicle = false;
      ui.state.textContent = 'مشّي';
    }
  }

  // تبريد إطلاق النار
  if(player.fireCooldown>0) player.fireCooldown--;

  // تحديث مقذوفات
  for(let i=bullets.length-1;i>=0;i--){
    const b = bullets[i];
    b.x += b.dx; b.y += b.dy; b.life--;
    // انضرب بـ سيارة أو NPC؟
    // سنفحص السيارات
    for(const v of vehicles){
      if(dist(b.x,b.y,v.x,v.y) < 20){
        bullets.splice(i,1);
        // نخفض سرعة السيارة مؤقتًا (تأثير رصاصة)
        v.speed *= 0.6;
        game.score += 2;
        ui.score.textContent = game.score;
        break;
      }
    }
    if(b.life<=0) bullets.splice(i,1);
  }

  // تحديث سيارات NPC: حركة بسيطة عشوائية
  vehicles.forEach(v=>{
    if(Math.random() < 0.01) v.angle += (Math.random()-0.5)*1.0;
    v.x += Math.cos(v.angle) * v.speed;
    v.y += Math.sin(v.angle) * v.speed;
    // حدود الخريطة
    if(v.x < 10 || v.x > map.width-10) v.angle += Math.PI/2;
    if(v.y < 10 || v.y > map.height-10) v.angle += Math.PI/2;
  });

  // تحقق من مهمة goto
  if(game.mission && game.mission.type === 'goto' && !game.mission.done){
    const d = dist(player.x,player.y, game.mission.x, game.mission.y);
    ui.missionText.textContent = `اذهب إلى الموقع الأحمر — المسافة: ${Math.floor(d)}`;
    if(d < 40){
      game.mission.done = true;
      game.score += 100;
      ui.score.textContent = game.score;
      ui.missionText.textContent = `المهمة مكتملة! حصلت على 100 نقطة. اضغط "مهمة جديدة"`;
    }
  }

  // كاميرا تتبع اللاعب
  cam.x = clamp(player.x - W/2, 0, map.width - W);
  cam.y = clamp(player.y - H/2, 0, map.height - H);

  // حفظ تلقائي كل 5 ثواني
  if(game.time % (60*5) === 0) saveGame();
}

/* ---- رسم اللعبة ---- */
function draw(){
  // خلفية (أرض)
  ctx.fillStyle = '#0f0f12';
  ctx.fillRect(0,0,W,H);

  // رسم شبكة الخريطة (tiles)
  const startX = Math.floor(cam.x / map.tile) * map.tile;
  const startY = Math.floor(cam.y / map.tile) * map.tile;
  ctx.strokeStyle = 'rgba(255,255,255,0.03)';
  ctx.lineWidth = 1;
  for(let x = startX; x < cam.x + W; x += map.tile){
    const sx = Math.round(x - cam.x);
    ctx.beginPath();
    ctx.moveTo(sx, 0);
    ctx.lineTo(sx, H);
    ctx.stroke();
  }
  for(let y = startY; y < cam.y + H; y += map.tile){
    const sy = Math.round(y - cam.y);
    ctx.beginPath();
    ctx.moveTo(0, sy);
    ctx.lineTo(W, sy);
    ctx.stroke();
  }

  // نقاط المهمة (مثال: علامة حمراء)
  if(game.mission && game.mission.type === 'goto' && !game.mission.done){
    const mx = game.mission.x - cam.x;
    const my = game.mission.y - cam.y;
    ctx.fillStyle = 'rgba(255,60,60,0.95)';
    ctx.beginPath();
    ctx.arc(mx, my, 12, 0, Math.PI*2);
    ctx.fill();
    ctx.strokeStyle = 'rgba(255,255,255,0.08)';
    ctx.stroke();
  }

  // رسم سيارات NPC
  vehicles.forEach(v=>{
    const vx = v.x - cam.x, vy = v.y - cam.y;
    ctx.save();
    ctx.translate(vx, vy);
    ctx.rotate(v.angle);
    // سيارة مستطيلة
    ctx.fillStyle = `hsl(${v.colorRand} 60% 50%)`;
    ctx.fillRect(-v.w/2, -v.h/2, v.w, v.h);
    // زجاج
    ctx.fillStyle = 'rgba(0,0,0,0.2)';
    ctx.fillRect(-v.w/4, -v.h/2, v.w/2, v.h/2);
    ctx.restore();
  });

  // رسم اللاعب (إذا ليس في سيارة)
  if(!player.inVehicle){
    const px = player.x - cam.x, py = player.y - cam.y;
    ctx.save();
    ctx.translate(px, py);
    ctx.rotate(player.angle);
    ctx.fillStyle = '#7fc8ff';
    ctx.fillRect(-player.w/2, -player.h/2, player.w, player.h);
    ctx.restore();
  } else {
    // إبراز السيارة التي يقودها اللاعب
    const v = vehicles.find(d=>d.id===player.idVehicle);
    if(v){
      const vx = v.x - cam.x, vy = v.y - cam.y;
      ctx.save();
      ctx.translate(vx, vy);
      ctx.rotate(v.angle);
      ctx.fillStyle = '#ffdd7f';
      ctx.fillRect(-v.w/2, -v.h/2, v.w, v.h);
      ctx.restore();
    }
  }

  // رسم المقذوفات
  bullets.forEach(b=>{
    const bx = b.x - cam.x, by = b.y - cam.y;
    ctx.fillStyle = '#ffd76b';
    ctx.beginPath();
    ctx.arc(bx, by, 4, 0, Math.PI*2);
    ctx.fill();
  });

  // HUD: مركز الخريطة (علامة اللاعب)
  ctx.fillStyle = 'rgba(255,255,255,0.06)';
  ctx.fillRect(8,8,140,72);
  ctx.fillStyle = '#fff';
  ctx.font = '12px Tahoma';
  ctx.fillText(`الإحداثيات: ${Math.floor(player.x)}, ${Math.floor(player.y)}`, 14, 26);
  ctx.fillText(`حالة: ${player.inVehicle ? 'في سيارة' : 'مشّي'}`, 14, 44);
  ctx.fillText(`نقاط: ${game.score}`, 14, 62);

  // خريطة صغيرة (mini-map)
  if(game.showMiniMap){
    const mmW = 220, mmH = 120;
    const mmX = W - mmW - 12, mmY = 12;
    ctx.fillStyle = 'rgba(0,0,0,0.6)';
    ctx.fillRect(mmX, mmY, mmW, mmH);
    // تمثيل الخريطة بالمقياس
    const scaleX = mmW / map.width;
    const scaleY = mmH / map.height;
    // سيارات
    vehicles.forEach(v=>{
      ctx.fillStyle = 'hsl(' + v.colorRand + ' 60% 50%)';
      ctx.fillRect(mmX + v.x*scaleX - 2, mmY + v.y*scaleY - 2, 4, 4);
    });
    // اللاعب
    ctx.fillStyle = '#7fffa1';
    ctx.fillRect(mmX + player.x*scaleX - 3, mmY + player.y*scaleY - 3, 6, 6);
    // مهمة
    if(game.mission && game.mission.type === 'goto' && !game.mission.done){
      ctx.fillStyle = '#ff6b6b';
      ctx.fillRect(mmX + game.mission.x*scaleX - 4, mmY + game.mission.y*scaleY - 4, 8, 8);
    }
    ctx.strokeStyle = 'rgba(255,255,255,0.06)';
    ctx.strokeRect(mmX, mmY, mmW, mmH);
  }
}

/* ---- حلقة اللعبة الرئيسية ---- */
function loop(){
  update();
  draw();
  // تحديث واجهة HTML
  ui.hp.textContent = Math.max(0, Math.floor(player.hp));
  ui.score.textContent = game.score;
  ui.state.textContent = player.inVehicle ? 'في السيارة' : 'مشّي';
  // تكرار
  requestAnimationFrame(loop);
}
loop();

/* ---- حفظ عند مغادرة الصفحة ---- */
window.addEventListener('beforeunload', ()=>{ saveGame(); });

</script>
</body>
</html>
