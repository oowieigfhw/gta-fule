<style>
  html,body{height:100%;margin:0;font-family:Tahoma,Arial;background:#111;color:#eee}
  #gameWrap{display:flex;gap:12px;padding:12px;align-items:flex-start}
  canvas{background:#2b2b2f;border-radius:10px;box-shadow:0 8px 30px rgba(0,0,0,0.6)}
  #ui{width:320px}
  .panel{background:#151518;padding:12px;border-radius:10px;margin-bottom:12px}
